{
  "title": "Adobe Acrobat bindings.",
  "rules": [
    {
      "description": "Adobe Acrobat: Vi-like bindings for scrolling.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": {
            "key_code": "down_arrow"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.adobe.Acrobat.Pro"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": {
            "key_code": "up_arrow"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.adobe.Acrobat.Pro"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "to": {
            "key_code": "right_arrow"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.adobe.Acrobat.Pro"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h"
          },
          "to": {
            "key_code": "left_arrow"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.adobe.Acrobat.Pro"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": {
            "key_code": "page_up"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.adobe.Acrobat.Pro"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": {
            "key_code": "page_down"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.adobe.Acrobat.Pro"]
            }
          ]
        }
      ]
    }
  ]
}
